<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmsc508.db508project.MainActivity">

    <Spinner
        android:id="@+id/nameSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="391dp" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/nameSpinner"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/lastNameSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_below="@+id/firstNameEditText"
        android:layout_toEndOf="@+id/firstNameEditText" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameSpinner"
        android:layout_toStartOf="@+id/nameSpinner"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/lastNameSpinner"
        android:text="Search" />

    <EditText
        android:id="@+id/IDEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lastNameEditText"
        android:layout_toStartOf="@+id/lastNameSpinner"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignEnd="@+id/IDEditText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IDEditText"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/schoolDistrictEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignEnd="@+id/emailEditText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailEditText"
        android:ems="10"
        android:hint="School District"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/IDspinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/lastNameSpinner" />

    <Spinner
        android:id="@+id/emailSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/IDspinner" />

    <Spinner
        android:id="@+id/schoolDistrictSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/emailEditText" />

    <EditText
        android:id="@+id/schoolEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/schoolDistrictEditText"
        android:layout_toStartOf="@+id/schoolDistrictSpinner"
        android:ems="10"
        android:hint="School"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/trainingEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignEnd="@+id/schoolEditText"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/schoolEditText"
        android:ems="10"
        android:hint="Training"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/schoolSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_above="@+id/trainingEditText"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/trainingSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/schoolSpinner" />

    <EditText
        android:id="@+id/gradeLevelEditText"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trainingEditText"
        android:layout_toStartOf="@+id/trainingSpinner"
        android:ems="10"
        android:hint="Grade Level"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/gradeLevelSpinner"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/trainingSpinner" />


</RelativeLayout>
